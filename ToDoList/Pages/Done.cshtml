@page
@model ToDoList.Pages.Tasks.DoneModel
@{
    ViewData["Title"] = "Mark Done";
}

<h2>Mark Done</h2>

<div>
    <p>If you have any sub-tasks under this tasks, they will all be marked done and removed.<br /></p>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Task.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Task.Title)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Task.CreationDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Task.CreationDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Task.DueDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Task.DueDate)
        </dd>
    </dl>
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Task.ID" />
        <input type="hidden" asp-for="Task.CreationDate" />
        <input type="hidden" asp-for="Task.Parent" />
        <input type="hidden" asp-for="Task.Title" />
        <input type="hidden" asp-for="Task.DueDate" />
        <input type="submit" value="Mark Done" class="btn btn-default" /> |
        <a asp-page="Index">Back to List</a>
    </form>
</div>
